<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".QuizActivity">

    <!--Score Board and Other things-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:weightSum="1"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/txtScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#533535"
            android:layout_weight="1"
            android:textSize="22sp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="2dp"
            android:layout_marginTop="10dp"
            android:text="Score: 0"
            android:fontFamily="@font/heavitas"
            android:background="@color/btcolor"
            />
        <TextView
            android:id="@+id/txtViewTimer"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:textColor="#533535"
            android:fontFamily="@font/heavitas"
            android:background="@drawable/round_corner_button"
            android:layout_gravity="center"
            android:text="00:30"
            />
    </LinearLayout>

        <TextView
            android:id="@+id/txtTotalQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            android:text="Question: 1/10"
            android:textColor="#533535"
            android:fontFamily="@font/heavitas"
            android:background="@color/btcolor"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/imgLifeLine1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/hearticon" />

            <ImageView
                android:id="@+id/imgLifeLine2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/hearticon" />

            <ImageView
                android:id="@+id/imgLifeLine3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/hearticon" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="vertical"

            >


            <TextView
                android:id="@+id/txtQuestionContainer"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="180dp"
                android:background="@drawable/round_corner_button"
                android:fontFamily="@font/heavitas"
                android:text="Dino Code Academy is Great Place to learn Coding?"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="20dp"
                android:textColor="#533535"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/hehe3"


                />
        </LinearLayout>

    </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="25dp"
            android:layout_height="match_parent" >

            <RadioButton
                android:id="@+id/radio_button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Opeating System"
                android:textSize="22sp"
                android:textColor="#533535"
                android:textAlignment="center"
                android:textStyle="bold"
                android:button="@null"
                android:freezesText="true"
                android:layout_marginTop="10dp"
                android:padding="12dp"
                android:background="@drawable/option_default"
                />

            <RadioButton
                android:id="@+id/radio_button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Random  Access Memory"
                android:textSize="22sp"
                android:textColor="#533535"
                android:background="@drawable/option_default"
                android:textAlignment="center"
                android:button="@null"
                android:textStyle="bold"
                android:freezesText="true"
                android:layout_marginTop="10dp"
                android:padding="12dp"

                />

            <RadioButton
                android:id="@+id/radio_button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Random  Access Memory four"
                android:textSize="22sp"
                android:textColor="#533535"
                android:textAlignment="center"
                android:button="@null"
                android:textStyle="bold"
                android:freezesText="true"
                android:layout_marginTop="10dp"
                android:padding="12dp"
                android:background="@drawable/option_default"

                />

            <RadioButton
                android:id="@+id/radio_button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Software"
                android:button="@null"
                android:freezesText="true"
                android:textSize="22sp"
                android:textColor="#533535"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:padding="12dp"
                android:background="@drawable/option_default"

                />
        </RadioGroup>


    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/round_corner_button"
        android:padding="20dp"
        android:text="Next"
        android:fontFamily="@font/heavitas"
        android:textColor="#533535"
        android:textSize="25sp"
        android:textStyle="bold" />

</LinearLayout>