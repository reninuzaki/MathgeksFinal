<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="@drawable/backgrounduimath"
    android:orientation="vertical"
    tools:context=".PlayActivity">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:src="@drawable/mathgekslogo2"
        android:textColor="#000"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/bt_playbutton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/heycomic"
        android:padding="10dp"
        android:text="â–¶"
        android:textAllCaps="false"
        android:textColor="@color/hehe"
        android:background="@drawable/circle"
        android:gravity="center"
        android:textSize="50sp"
        android:backgroundTint="@color/btcolor"
        />

    <Button
        android:id="@+id/bt_tipsandguides"
        android:text="Tips and Guides"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:fontFamily="@font/heycomic"
        android:background="@drawable/round_corner_button"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        android:layout_marginRight="150dp"
        android:layout_marginLeft="130dp"
        >

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@drawable/settings"
            android:backgroundTint="@color/btcolor"
            />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@drawable/info"
            />
          </LinearLayout>



</LinearLayout>